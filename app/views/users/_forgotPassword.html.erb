<div class="title"><%= @title %></div>

<% if @invalid %>
	<div class="errorExplanation">
		<ul><li>Your email could not be found.</li></ul>
	</div>
<% end %>

<div class="spacer">
	Please enter your email address. We will send you an email. Please click on the link within the email to change your password.
</div>

<%= form_remote_tag( :url => {:controller => 'users', :action => 'sendForgotPasswordEmail'},
	:loading => "displayLoadingMsg();",
	:loaded => "hideLoadingMsg();",
    :update => "popupFormDiv" )%>
	
	<div class="field">
		<label for="email">Email</label>
		<%= text_field :user, :email, :value => @email %>
	</div>

	<div class="actions">			
		<% primaryButton do %>
			<%= submit_tag 'Send Email' %>
		<% end %>
		
		<% secondaryButton do %>
			<%=button_to_function "Cancel", "hidePopup();" %>
		<% end %>			
	</div>
</form>
