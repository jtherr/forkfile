
<div class="title">Add Delivery Hours</div>

<%= error_messages_for :delivery_hour, :header_message => nil, :message => nil %>

<%= form_remote_tag( :url => {:action => 'createDeliveryHour'},
    :update => { :success => "deliveryHoursList", :failure => "popupFormDiv" },
	:loading => "displayLoadingMsg();",
	:loaded => "hideLoadingMsg();",
	:success => "hidePopup();" )%>

	<div class="field">
		<label for="day_id">Days</label>
		
		S<%= check_box :delivery_hour, :sunday %>
		M<%= check_box :delivery_hour, :monday %>
		T<%= check_box :delivery_hour, :tuesday %>
		W<%= check_box :delivery_hour, :wednesday %>
		T<%= check_box :delivery_hour, :thursday %>
		F<%= check_box :delivery_hour, :friday %>
		S<%= check_box :delivery_hour, :saturday %>
	</div>
	
	<div class="field">
		<label for="start_time">Start Time</label>
		<%= select(:delivery_hour, :start_time, @time_options.collect {|p| [ p[:name], p[:id] ] }, { :include_blank => true, :selected => '9:00' }) %>
		<span class="red">*</span>
	</div>

	<div class="field">
		<label for="end_time">End Time</label>
		<%= select(:delivery_hour, :end_time, @time_options.collect {|p| [ p[:name], p[:id] ] }, { :include_blank => true, :selected => '21:00' }) %>
		<span class="red">*</span>
	</div>

	<div class="actions">
		<% primaryButton do %>
			<%= submit_tag "Create" %>
		<% end %>
		
	
		<% secondaryButton do %>
			<%= button_to_function "Cancel", "hidePopup();" %>
		<% end %>			
	</div>

</form>
