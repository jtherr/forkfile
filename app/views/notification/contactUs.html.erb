

<% shadowBox @title do %>

	<div class="spacer">
		To contact us with your comments, questions, issues, or concerns, please fill out the following form.
		We will address your submission as soon as possible.
	</div>
	
	<%= error_messages_for :notification, :header_message => nil, :message => nil %>
	<% form_for :notification, :url => { :action => 'create' }, :html => { :class => "captcha" } do |f| -%>
	
		<div class="field">
			<label for="email">Email</label>
			<%= f.text_field :email, :value => @email %>
			<span class="red">*</span>
		</div>
	
		<div class="field">
			<label for="reason">Reason for Contacting Us</label>
			<%= collection_select(:notification, :notification_reason_id, @reasons, :id, :name, { :prompt => true }) %>
			<span class="red">*</span>
		</div>
	
		<div class="field">
			<label for="message">Message</label>
			<%= f.text_area :message, :cols => 50, :rows => 3 %>
			<span class="red">*</span>
		</div>
		
		<div class="field">
			<label for="order_number">Order Number (if applicable)</label>
			<%= f.text_field :order_number %>
		</div>

		<div class="actions">				
			<% primaryButton do %>
				<%= submit_tag 'Submit' %>
			<% end %>
		</div>
	<% end -%>

<% end %>
