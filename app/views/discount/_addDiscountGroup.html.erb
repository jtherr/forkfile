<div class="title"><%= @title %></div>

<%= error_messages_for :discount_group, :header_message => nil, :message => nil %>

<% form_tag "/discount/showDiscountGroup", :method => :get, :id => "reloadForm" do %><% end %>

<%= form_remote_tag( :url => {:action => "createDiscountGroup"},
    :update => "popupFormDiv",
	:loading => "displayLoadingMsg();",
	:loaded => "hideLoadingMsg();",
	:success => "jQuery('#reloadForm').submit();" )%>

	<div class="field">
		<label for="name">Name</label>
		<%= text_field :discount_group, :name %>
		<span class="red">*</span>
	</div>

	<div class="actions">		
		<% primaryButton do %>
			<%= submit_tag 'Create' %>
		<% end %>

		<% secondaryButton do %>
			<%=button_to_function "Cancel", "hidePopup();" %>
		<% end %>
	</div>
</form>
