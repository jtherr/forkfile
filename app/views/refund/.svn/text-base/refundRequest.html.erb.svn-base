
<% shadowBox @title do %>

	To request a refund, please provide the following information. 

	<%= error_messages_for :refund, :header_message => nil, :message => nil %>
	<% form_for :refund, :url => { :action => 'create' } do |f| -%>
	
		<div class="field">
			<label for="email">Email</label>
			<%= f.text_field :email, :value => @email %>
		</div>

		<div class="field">
			<label for="request_amount">Amount in Dispute</label>
			<%= f.text_field :request_amount %>
		</div>
	
		<div class="field">
			<label for="reason">Reason for Refund</label>
			<%= f.text_area :reason, :cols => 50, :rows => 3 %>
		</div>

		<div class="field">
			<label for="account_number">Restaurant Account Number</label>
			<%= f.text_field :account_number %>
		</div>
		
		<div class="field">
			<label for="order_number">Order Number</label>
			<%= f.text_field :order_number %>
		</div>

		<div class="actions">			
			<% primaryButton do %>
				<%= submit_tag 'Submit' %>
			<% end %>
		</div>
	<% end -%>

<% end %>

