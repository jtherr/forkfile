
<div class="title"><%= @title %></div>

<%= error_messages_for :sub_option_group, :header_message => nil, :message => nil %>

<%= form_remote_tag( :url => {:action => 'createSubOptionGroup' },
    :update => { :success => "linkedSubOptionGroups", :failure => "popupFormDiv" },
	:loading => "displayLoadingMsg();",
	:loaded => "hideLoadingMsg();" )%>

	<div class="field">
		<label for="sub_option_group">Sub-Option Group</label>
		<%= collection_select(:sub_option_group, :option_group_id, @option_groups, :id, :name, { :prompt => true }) %>
	</div>
			
	<div class="actions">
		<% primaryButton do %>
			<%= submit_tag 'Link' %>
		<% end %>
	</div>
	
</form>

<div id="linkedSubOptionGroups">
	<%= render :partial => "linkedSubOptionGroups" %>
</div>

<div class="field">
	<label></label>
	
	<% secondaryButton do %>
		<%=button_to_function "Close", "hidePopup();" %>
	<% end %>
</div>
